{
  "port":9999,
  "binding":"0.0.0.0",
  "idletime":180,
  "persistentpath":"/tmp",
  "datapath":"/usr/share/thunder/",
  "systempath":"/usr/lib/thunder/",
  "webserver":"/boot/www",
  "plugins":
  [
    {
      "callsign":"Dictionary",
      "locator":"libdictionary.so",
      "classname":"Dictionary",
      "configuration":{
        "storage":"DataModel.json",
        "lingertime":10
      }
    },
    {
      "callsign":"BackOffice",
      "locator":"libbackoffice.so",
      "classname":"BackOffice",
      "configuration":{
        "server":"ws.metrological.com",
        "port":80,
        "components": "Components",
        "profiler": { "testdata":"Hello world", "moretest":45 }
      }
    },
    {
      "callsign":"SystemInformer",  
      "locator":"libsysteminformer.so",
      "classname":"SystemInformer"
    },
    {
      "callsign":"DeviceInfo",
      "locator":"libdeviceinfo.so",
      "classname":"DeviceInfo"
    },
    {
      "callsign":"Tracing",
      "locator":"libtracecontrol.so",
      "classname":"TraceControl",    
      "configuration": 
      {
        "syslog":true,
        "remote":
        {
          "port":4444,
          "binding":"0.0.0.0"
        }
      }
    }, 
    {
      "callsign":"Provisioning",
      "locator":"libprovisioning.so",
      "classname":"Provisioning",    
      "configuration": 
      {
        "operator":"liberty",
        "dxdrmpath":"/tmp/dxdrm",
        "server":"provisioning.metrological.com",
        "port":80
      }
    },  
    {
      "callsign":"I2CControl",
      "locator":"libi2ccontrol.so",
      "classname":"I2CControl",
      "configuration":
      {
        "deviceid":"/dev/i2c-1",
        "devices":
        [
          {
            "id":"led",
            "type":"PCF8574",
            "address":56
          }
        ]
      }
    }, 
    {
      "callsign":"SPIControl",
      "locator":"libspicontrol.so",
      "classname":"SPIControl",
      "configuration":
      {
        "deviceid":"/dev/spidev0.0",
        "mode":"SPIMODE_0",
        "devices":
        [
          {
            "id":"adc",
            "type":"MCP3002",
            "address":0,
            "speed":10000
          }
        ]
      }
    }, 
    {                               
      "callsign":"TempControl",     
      "locator":"libtempcontrol.so",
      "classname":"TempControl",    
      "configuration":              
      {                             
        "devices":                  
        [                           
          {                         
            "id":"binnen",          
            "address":"28-0214630802ff",
            "recordtime":5
          },
          {                            
            "id":"buiten",             
            "address":"28-0314623ed3ff",
            "recordtime":5
          }                            
        ]                              
      }                                
    },                                 
    {
      "callsign":"FanControl",
      "locator":"libfancontrol.so",
      "classname":"FanControl",
      "configuration":
      {
        "deviceid":"/dev/ttyACM0"
      }
    },
    {
      "callsign":"DelayedResponse",
      "locator":"libdelayedresponse.so",
      "classname":"DelayedResponse",
      "configuration":
      {
        "minimum":0,
        "maximum":30
      }
    },
    {
      "callsign":"FileStore",
      "locator":"libfileserver.so",
      "classname":"FileServer",
      "configuration":
      {
        "prefix":"/tmp",
        "key":"SecretKey"
      }
    },
    {
      "callsign":"Browser",
      "locator":"libbrowser.so",
      "classname":"Browser",
      "startmode": "Deactivated",
      "configuration":
      {
        "fullscreen":true,
        "transparent":true,
        "url":"http://test.integraal.info/xhr.html",
        "configuration":
        {
          "webkit2":false,
          "mindeadcache":2,
          "maxdeadcache":6,
          "totalcache":12,
          "pixmapcache":4
        }
      }
    }
  ]
}
